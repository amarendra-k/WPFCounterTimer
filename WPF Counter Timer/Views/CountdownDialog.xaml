<Window x:Class="WPFCounterTimer.Views.CountdownDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFCounterTimer.Views"
        mc:Ignorable="d"
        Title="CountdownDialog" Height="450" Width="800"
        >
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock FontSize="36" Text="{Binding TimeLeft}" HorizontalAlignment="Center"/>
            <Button Content="Cancel" Margin="10" Width="100" Command="{Binding CancelCommand}" />
        </StackPanel>
    </Grid>
</Window>
