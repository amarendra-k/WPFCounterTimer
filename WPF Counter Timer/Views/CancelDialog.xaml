<Window x:Class="WPFCounterTimer.Views.CancelDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFCounterTimer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             AllowsTransparency="True"
             WindowStyle="None"
             Background="Transparent"
        >
    <Border BorderBrush="Gray" BorderThickness="5" Background="#AAFFFFFF">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Do you want to cancel the timer?" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Abort Cancellation" Margin="5" Width="120" Command="{Binding AbortCommand}"/>
                <Button Content="Confirm Cancellation" Margin="5" Width="140" Command="{Binding ConfirmCommand}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
        </Border>
</Window>
